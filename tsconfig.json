{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "noImplicitAny": false,
    "allowJs": true,
    "outDir": "dist/",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": false,
    "useUnknownInCatchVariables": false,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "isolatedModules": true,
  },
  "exclude": [
    "historic",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "types.ts",
    "server.ts"
  ],
  "files": [
    "src/server.ts"
  ],
  "ts-node": {
    "files": true
  },
}
